<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:background="@color/title_bg">


    <ImageView
        android:layout_width="@dimen/title_height"
        android:layout_height="match_parent"
        android:id="@+id/title_left_img"
        android:src="@drawable/img_gengduo_selected"
        android:padding="12dp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text=""
        android:textColor="@color/text_color"
        android:id="@+id/title_left_tv"
        android:layout_toRightOf="@+id/title_left_img"/>

    <TextView
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:text=""
        android:textColor="@color/text_color"
        android:id="@+id/title_center_tv"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="match_parent"
        android:text=""
        android:id="@+id/title_right_tv"
        android:textColor="@color/text_color"
        android:layout_toLeftOf="@+id/title_right_img"/>

    <ImageView
        android:layout_width="@dimen/title_height"
        android:layout_height="match_parent"
        android:id="@+id/title_right_img"
        android:src="@drawable/img_gengduo_selected"
        android:layout_alignParentRight="true"
        android:padding="12dp"
        android:visibility="gone"
        />


</RelativeLayout>
